<h2>Add your product!</h2>
<form action='/products' method='POST'>
  <label for='productName'>Product title</label>
  <input name='productName' id='productName' />
  <label for='productDescription'>Product description</label>
  <input name='productDescription' id='productDescription' />
  <label for='productCode'>Product code</label>
  <input name='productCode' id='productCode' />
  <label for='productStock'>Product stock</label>
  <input name='productStock' id='productStock' />
  <label for='productPrice'>Product price</label>
  <input name='productPrice' id='productPrice' />
